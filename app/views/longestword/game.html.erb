<div class="container text-center">
  <div class="row">
      <ul class="list-inline" id="game-grid">
        <% @grid.each do |letter| %>
          <li><%= letter %></li>
        <% end %>
      </ul>
  </div>
  <div class="row">
    <form action="/score" method="post">
      <div class="input-group input-group-lg" id="guess-word">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="hidden" name="grid" value="<%= @grid.join('') %>">
        <input type="hidden" name="start_time" value="<%= @start_time %>">
        <span class="input-group-addon" id="sizing-addon1">Your guess:</span>
        <input type="text" name="attempt" class="form-control" aria-describedby="sizing-addon1">
      </div>
       <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
